<h1>Files</h1>

<table class="table">
  <thead class="table-light">
    <tr>
      <th>Filename</th>
      <th>Upload time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loads.each do |load| %>
      <% if Current.user.id == load.user_id%>
      <tr>
        <td><%= load.title %></td>
        <td><%= load.updated_at %></td>        
        <td><%= link_to 'Download', load %></td>
        <td><%= link_to 'Edit', edit_load_path(load) %></td>
        <td><%= link_to 'Delete', load, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Load', new_load_path %>
