<h1>New File</h1>

<%= form_with model: @load, url: new_load_url do |form| %>
    <% if @load.errors.any? %>
    <div class="alert alert-danger">
    <% @load.errors.full_messages.each do |message| %>
        <div><%= message %></div>
    <% end %>
    </div>
  <% end %>
  
    <div class="field">
      <%= form.file_field :title %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
    <%= link_to 'Back', loads_path %>

<% end %>
